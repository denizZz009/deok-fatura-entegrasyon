<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <directoryBrowse enabled="false" />
    <security>
      <requestFiltering>
        <fileExtensions>
          <add fileExtension=".json" allowed="true" />
          <add fileExtension=".txt" allowed="true" />
        </fileExtensions>
        <hiddenSegments>
          <add segment="supabase.json" />
          <add segment="admin_secret.txt" />
        </hiddenSegments>
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>


